.band{
  margin: 0 20rpx 20rpx;
  width: calc(100% - 40rpx);
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.band_jx{
  color: #000;
  padding: 40rpx 40rpx 20rpx;
  font-size: 30rpx;
}
.list{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: start;
}
.item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}
.box{
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box image{
  width: 80%;
}
.name{
  text-align: center;
  font-size: 24rpx;
}