.miaosha{
  margin: 20rpx;
  background-color: #fff;
  width: calc(100% - 40rpx);
  height: auto;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.limit{
  width: 100%;
  height: 100rpx;
  padding: 44rpx 10rpx 24rpxm 30rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}
.limit image{
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.timer{
  width: 70%;
  padding-left: 40rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}
.timer-box{
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  color: #fff;
  background-color: #f00;
  border-radius: 5rpx;
}
.timer_{
  color: #f00;
  margin: 0 10rpx;
}
.miaoshalist{
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
}
.mscategory{
  width: 25%;
  box-sizing: border-box;
  padding: 10rpx 10rpx 0;
  height: 100rpx;
  border-bottom: 2rpx solid #888888;
}
.mscategory.active{
  width: 25%;
  box-sizing: border-box;
  padding: 10rpx 10rpx 0;
  height: 100rpx;
  border-bottom: 4rpx solid #f00;
}
.mstimer,
.msactive{
  color: #888888;
  font-size: 24rpx;
  text-align: center;
}
.mscategory.active .mstimer,
.mscategory.active .msactive{
  color: #f00;
  font-size: 28rpx;
}
.ms_list{
  width: 100%;
  height: 418rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.ms_list_item{
  padding: 0 10rpx;
  box-sizing: border-box;
  width: 200rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  text-align: start;
  float: left;
}
.ms_list_item_img{
  width: 180rpx;
  height: 180rpx;
  /* height: 204rpx; */
}
.ms_list_item_title{
  padding: 0 10rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.ms_list_item_price{
  padding: 0 10rpx;
  text-align: center;
  font-weight: bold;
  color: red;
  text-align: start;
  font-size: 28rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.ms_list_item_noprice{
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
  line-height: 28rpx;
  height: 28rpx;
  text-decoration:line-through;
}
.ms_list_wrap{
  display: flex;
}
.skill_more{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}