/* pages/find/find.wxss */
@import "../../fonts/iconfont.wxss";
.find_nav{
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: flex-start;
}
.find_nav_items{
  width: 33.33%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  box-sizing: border-box;
  position: relative;
}
.find_nav_items.active .find_nav_item::after{
  content: "";
  position: absolute;
  width: 38rpx;
  height: 8rpx;
  background-color: #f00;
  border-radius: 4rpx;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}

.find_container{
  padding: 20rpx;
  background-color: #efefef;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  justify-items: flex-start;
}
.find_item{
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}
.find_item_src{
  width: 100%;
  height: 476rpx;
}
.find_item_title{
  padding: 7rpx;
  font-size: 28rpx;
  font-weight: bold;
  height: 84rpx;
  line-height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.find_item_else{
  padding: 10rpx;
  height: 44rpx;
  display: flex;
  justify-content: space-around;
}
.img{
  height: 100%;
  border-radius: 50%;
}
.user_name,
.eyes,
.num{
  line-height: 44rpx;
  font-size: 26rpx;
  color: #888;
}