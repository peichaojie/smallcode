/* pages/cart/cart.wxss */
.goodlist_swiper{
  width: 100%;
  position: relative;
  background-color: #c5c1c1;
}
.cart_footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.selectall{
  width: 25%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  background-color: rgb(100, 24, 53);
}
.priceall{
  width: 25%;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  font-size: 28rpx;
}
.payall{
  width: 30%;
  background-color: #f44;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.goodslist_item{
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  display: flex;
}
.select{
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(100, 24, 53);
}
._item{
  width: 90%;
  height: 100%;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx 0 30rpx 190rpx;
  position: relative; 
  min-height: 200rpx;
}
._item_box{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: 30rpx;
  left: 20rpx;
}
._item_box image{
  width: 100%;
  height: 100%;
}
._item_info{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.item_title{
  width: 100%;
  height: 64rpx;
  line-height: 32rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.item_else{
  height: 40rpx;
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item_price{
  font-weight: 700;
  color: #f44;
}
.item_price::before{
  content: 'Â¥';
}
.item_func{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.item_func input,
.item_func view{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  border: 2rpx solid #f44;
  box-sizing: border-box;
}